<%= javascript_include_tag 'competitions' %>
<%= stylesheet_link_tag 'competitions'%>
<div>
  <% if @competitions %>
    <% @competitions.each do |c| %>
      <% if c.investor.active and c.investor.banned == false and c.open %>
        <div class="row-fluid text-center" id='competition-<%= c.id %>'>
          <div class="competition span12">
            <div class="row-fluid">
              <div class="span6">
                <h2>
                  <%= link_to  c.title , c %>
                </h2>
                <div>
                  by:
                  <%= link_to c.investor.username , c %>
                </div>
              </div>
              <div class="span6">
                <div class="row-fluid">
                  <div class="span6">
                    <h4>start date:</h4>
                    <h4>expiry date:</h4>
                  </div>
                  <div class="span6">
                    <h4 class="green"><%= c.start_date %></h4>
                    <h4 class="red"><%= c.end_date %></h4>
                  </div>
                </div>
              </div>
            </div>
            <br/>
            <div class="row-fluid">
              <div class="description span9">
                <%= c.description %>
              </div>
              <div class="dates span3">
                <%=
                 link_to_if(current_page?(:controller => 'competition', :action => 'index'), "Enroll", { :controller => "competition", :action => "show", :id => c.id }) do
                  link_to("Enroll", { :controller => "idea", :action => "enter_competition", :id => c.id })
                  end
                %>
              </div>
            </div>
            <br/>
            <div class="row-fluid">
              <div class="span6">
                <ul class=" btn-group inline">
                  <% c.tags.each do |tag| %>
                    <li class="taging">
                      <a href="#"><%= tag.name %></a></li>
                  <% end %>
                </ul>
              </div>
              <div class="span6">
                <h4>current ideas:
                  <%= c.ideas.length %></h4>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
