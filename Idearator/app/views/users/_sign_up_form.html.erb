<h4 class='text-center unauth-header'>Sign up<h4>

<%= form_tag user_registration_path do %>
  <%= label_tag 'email' %>
  <%= text_field_tag 'user[email]' %>
  <%= label_tag 'password' %>
  <%= password_field_tag 'user[password]' %>
  <%= label_tag 'confirm_password' %>
  <%= password_field_tag 'user[password_confirmation]' %>
  <%= label_tag 'username' %>
  <%= text_field_tag 'user[username]' %>
    <%= submit_tag 'Sign up', class: 'btn btn-info' %>
<% end %>

