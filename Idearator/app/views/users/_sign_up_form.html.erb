<h3 class='text-center unauth-header up'>Sign up</h3>

<%= form_tag user_registration_path do %>
  <div class="input-prepend">
    <span class="add-on"><i class="icon-envelope"></i></span>
    <%= text_field_tag 'user[email]', nil, placeholder:"Enter email here"%>
  </div>
  <div class="input-prepend">
    <span class="add-on"><i class="icon-key"></i></span>
    <%= password_field_tag 'user[password]', nil, placeholder:"Enter password" %>
  </div>
  <div class="input-prepend">
    <span class="add-on"><i class="icon-key"></i></span>
    <%= password_field_tag 'user[password_confirmation]', nil, placeholder:"Confirm password" %>
  </div>
  <div class="input-prepend">
    <span class="add-on"><i class="icon-user"></i></span>
    <%= text_field_tag 'user[username]', nil, placeholder:"Enter a username" %>
  </div>
  <div>
    <%= submit_tag 'Sign up', class: 'btn btn-info sign_up_button' %>
  </div>
<% end %>