<h4 class='text-center unauth-header'>Sign in</h4>
<%= form_tag user_session_path do %>
  <%= label_tag 'email' %>
  <%= text_field_tag 'user[email]' %>
  <%= label_tag 'password' %>
  <%= password_field_tag 'user[password]' %>
  <div class='unauth-remember-me'>
    <%= check_box_tag 'user[remember_me]' %>
    <%= label_tag 'user[remember_me]', 'Remember me', class: 'inline' %>
  </div>
  <%= submit_tag 'Sign in', class: 'btn' %><br />
  <%= link_to "Forgot your password?", new_password_path('user') %>
<% end %>
<br />
<ul class='inline unstyled'>
  <li><%= link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook),
             :class => 'popup social-media-login facebook-nav-login inline unauth-sign-in',
             "data-width" => 600, "data-height" => 500 %>
  </li>
  <li>
    <%= link_to 'Sign in with Twitter', user_omniauth_authorize_path(:twitter),
            :class => 'popup social-media-login twitter-nav-login inline unauth-sign-in',
            'data-width' => 600, 'data-height' => 500  %>
  </li>
</ul>
