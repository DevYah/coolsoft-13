<h1><%= @user.username %>'s Profile</h1>
<%if @user.banned == true %>
  <p class="text-error">This User is currently banned!</p>
  <%elsif @user.active == false%>
    <p class="text-error">This User is currently deactivated!</p>
<% end %>
<% if  current_user!= nil && current_user.type == "Admin" && @user.active==true && @user.banned==false%>
 <button class="btn btn-primary btn-large">Ban</button>
<% end %>
<% if current_user != nil && current_user.type == "Admin" &&  @user.banned==true%>
 <button class="btn btn-primary btn-large">Unban</button>
<% end %>
<div style = "display:block">
  <% if current_user == @user %>
  <div class= "btn"><%= link_to "Edit" , edit_user_path %></div>
    <% end %>
  <% if current_user == @user and @user.active%>
   <button class="btn">Deactivate</button>
  <% end %>
</div>
<% if @user.banned == false and @user.active == true %>
  <div style = "display:inline-block;position:absolute;">
  <%= image_tag @user.photo.url(:medium) %>
  </div>
  <div style = "display:inline-block;position:relative;left:340px;down:60px;">
    <h3> About <%= @user.username %> </h3>
    <strong>Email</strong><br>
    <%= @user.email %><br>
    <strong>First Name</strong><br>
    <%= @user.first_name %><br>
    <strong>Last Name</strong><br>
    <%= @user.last_name %><br>
    <strong>Gender</strong><br>
    <%= @user.gender %><br>
  </div>
  <div style = "float:right">
    <strong style = "padding-left:1cm;">About <%= @user.username %></strong><br>
    <div style = "padding-left: 1cm; ">
    <%= @user.about_me %><br>
    </div>
  </div>
  <br>
  <h2> User Ideas </h2>
  <br>
  <div id = "IdeaStream">
    <div class = "page">
      <%= render :partial => '/home/stream' %>
    </div>  
  </div>
<% end %>
