<% content_for :javascript_includes do %>
  <%= javascript_include_tag "user.js" %>
<% end %>
<div class='msg-alert alert alert-error sign-up-error span6'>
  <a class="close" data-dismiss="alert">Ã—</a>
  <%= devise_error_messages! %>
</div>
<div class='well sign-form span6'>
  <h3>Sign up</h3>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    
    <div class="input-prepend">
      <span class="add-on"><i class="icon-envelope"></i></span>
      <%= f.email_field :email, :autofocus => true, placeholder:"Enter email here" %>
    </div>
    <br />

    <div class="input-prepend">
      <span class="add-on"><i class="icon-key"></i></span>
      <%= f.password_field :password, placeholder:"Enter password" %>
    </div>
    <br />

    <div class="input-prepend">
      <span class="add-on"><i class="icon-key"></i></span>
      <%= f.password_field :password_confirmation, placeholder:"Confirm password" %>
    </div>
    <br />

    <div class="input-prepend">
      <span class="add-on"><i class="icon-user"></i></span>
      <%= f.text_field :username, placeholder:"Enter a username" %>
    </div>
    <br /><br />

    <div><%= f.submit "Sign up", class: 'btn btn-info sign_up_button' %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>