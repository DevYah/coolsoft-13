<div class='well notification enter_idea-notification <%= read ? 'read' : 'unread' %>' data-time=<%= notification.created_at.to_i %> data-notification = <%= notification.id %>>
  <span><%= notification.text %></span>
  <div class='notification-link'><%= link_to 'Review', { :controller => "competitions", :action => "review_competitions_ideas", :id => notification.competition.id, idea_id: notification.idea.id }%></div>
  <span class='notification-date'><%= notification.created_at.to_s(:long)%></span>
</div>