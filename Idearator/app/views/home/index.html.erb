<body class = overview>
<h1 class = text>Home</h1>

<%= form_tag "/home/show", :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
 <style type="text/css">
    .text{
      font-style: helvetica;
    }
    .ideas
    {
        background-color: #FFFFFF;
        width: 100px;
        height: 50px;
        border: solid;
    }
    .idea
    {
        background-color: #FFFFFF;
        width: 500px;
        height: 50px;
        border: solid;
    }
    .overview{
      background-color: #339999
    }
    </style>
    <% if params[:search] != ""%>
<table>
  <tr>
    
    <th></th>
    <th></th>
  </tr>
<% @ideas.each do |i| %>
  <tr >
    <th>Title</th>
    <td class = ideas><%= link_to i.title, i %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td class = idea><%= i.description %></td>
  </tr>
<% end %>
</table>
<% if @ideas.count == 0 %>
<em>No Results Found !!</em>
<% end %>
<% end %>
<% if params[:search] == ""%>
<em>
Ohh! you entered nothing in the search
</em>
<% end %>
</body>
