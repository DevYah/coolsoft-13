<p id="notice"><%= notice %></p>


<div id="topten">
<h1>Top Ten Ideas</h1>
<% @top.each do |top| %>
<div class="topten_idea">
	<span><%= link_to top.title ,top %></span>
	<span><%= top.num_votes %></span>
	<span><%= top.user.first_name %></span>
</div>
<% end %>
</div>

<script type="text/javascript">
(function() {
  var page = 1,
      loading = false;

  function nearBottomOfPage() {
    return $(window).scrollTop() > $(document).height() - $(window).height() - 100;
  }

  $(window).scroll(function(){
    if (loading) {
      return;
    }

    if(nearBottomOfPage()) {
      loading=true;
      page++;
      $.ajax({
        url: '/home/index?page=' + page,
        type: 'get',
        dataType: 'script',
        success: function() {
        	loading=false;
          $(window).sausage('draw');
          
        }

      });
    }
  });

  $(window).sausage();
}());
</script>