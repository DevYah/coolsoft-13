 .topten{
  position: relative;
  left: 75%;
  width: 300px;
  height: 200px;  
  }
  .topten_idea{
    height:70px;
    width: 300px;
    background-color: #999999;
    border-style: solid;
    border-width: 1px;
    border-color: white;  
  }
 .spam{
  width: 50px;
 }
.spam{
	width: 50px;
