<div id="example" class="modal hide fade in" style="display: none; ">  
<div class="modal-header">  
<a class="close" data-dismiss="modal">×</a>  
<h3>New Synonym</h3>  
</div>  
<div class="modal-body">  
	<%= form_for @tag, :html => { :class => 'form-horizontal' }, :url =>  url_for(:controller => 'tags',  :action => 'addsym') do |f| %>
	  <div class="control-group">
	    <%= f.label :name, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.text_field :name, :class => 'text_field'%>
	    </div>
	  </div>

	  <div class="alert">  
	    <a id = notice class="close" data-dismiss="alert">×</a>  
	    <strong>Info:</strong> <p id="notice"><%= notice %></p>
	  </div>  
</div>  
<div class="modal-footer">  
<%= f.submit "New Synonym", :class => 'btn btn-primary' %>
<a href="#" class="btn" data-dismiss="modal">Close</a>  
</div>  
</div>  
<% end %>




