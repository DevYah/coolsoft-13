<% content_for :javascript_includes do %>
  <%= javascript_include_tag "navigationscroll.js" %>
<% end %>

<script>
  in_stream = true;
</script>

<% if current_user != nil %>
  <% if current_user.unread_notifications_count > 0 %>
    <% content_for :title, "(" + current_user.unread_notifications_count.to_s + ")" + "Idearator" %>  
  <% end %>
<% else %>
  <% content_for :title, "Idearator" %>
<% end %>

<%if current_user == nil%>
  <div id= "landing">
    <div class='row landing-centered text-center'>
      <div class='span12'>
        <div id="myCarousel" class="carousel slide span8">
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner carouselitem text-center">
            <div class="active item">
              <div class="text-center">
                <%= image_tag('lightbulb-image-for-WEbsite1.jpg')%>
                <div class="carousel-caption text-center">
                  <h4>Have an Awsome Idea ?!</h4>
                  <h4>Decide you want to share your idea with the world.</h4>
                </div>
              </div>
            </div>
            <div class="item carouselitem">
              <div class="text-center">
                <%= image_tag('331281.jpg')%>
              </div>
              <div class="carousel-caption text-center">
                <h4>Sign up right now to Idearator</h4>
              </div>
            </div>
            <div class="item carouselitem">
              <div class="text-center">
                <%= image_tag('bulb1.jpg')%>
              </div>
              <div class="carousel-caption text-center">
                <h4>Submit your idea</h4>
                <h4>Let the community decide the future of your idea</h4>
                <h4>Turn your idea into a Reality</h4>
              </div>
            </div>
          </div>
          <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
          <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
        <div class='span3'>
          <div class="row signinout landing-centered">
            <%= render 'layouts/sign_up_in_form' %>
            
          </div>
          <div class='row text-center'>
            <br /><br />
            <h6 class='check-ideas'>Take a look around</h6>
            <a class='show-stream btn btn-danger'> Checkout our latest ideas!</a>
          </div>
        </div>
      </div>
    </div>
    <% if @best.size != 0%>
      <div class='row span11 text-center'>
        <h5 class='best-ideas-title'>Some of our best ideas</h5>
      </div>
      <div class='row text-center'>
        <div class='span11'>
          <div id="Carousel" class="carousel slide">
            <!-- Carousel items -->
            <div class="carousel-inner">
              <% @best.each_with_index do |best, index| %>
                <% if index == 0 %>
                  <div class="active item">
                <% else %>
                  <% if index%4 == 0 %>
                    </div>
                    <div class="item">
                  <% end %>
                <% end %>
                  <div class='best-wrapper' data-idea-id='<%= best.id %>'>
                  <%= image_tag best.photo.url(:medium) ,:class => 'img-rounded best-ideas' %>
                  <div class='description-caption img-rounded text-center'>
                    <h3 class='description_content best-title'><%= best.title%></h3>
                    <h4 class='description_content best-user'> By <%= best.user.username %></h4>
                  </div>
                  </div>
              <% end %>
              </div>
            </div>
            <!-- Carousel nav -->
            <a class="carousel-control left" href="#Carousel" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#Carousel" data-slide="next">&rsaquo;</a>
          </div>
        </div>
      <%end%>
    </div>
  </div>
<% end%>

<div class="container landing-stream">
  <div class='row' id="in-stream-component">
    <div class='span8' id="stream">
      <% if !user_signed_in? %>
        <a class='hide-stream'>Hide stream<i class='icon-chevron-down'></i></a>
      <% end %>
      <div id="stream_results" data-tags=[] data-outsidetags='<%= @filter_tmp %>'>
        <%= render :partial => 'index'%>
      </div>
      <div id="spinner-outer">
        <div id="spinner">
          <!-- <i class="spinner-inner"></i> -->
          <img src="http://i.stack.imgur.com/0iq1w.gif" id="spinner-inner">
        </div>
      </div>
    </div>
    <div id='sidebar' class='span4 pull-right'>
      <% if MonthlyWinner.all.count > 0 %>
        <div class='idea_of_the_month well'>
            <h3 class='title sidebar_title'><i class="icon-trophy"></i> Idea of the Month</h3>
          <div id="myCarousel" class="carousel slide sidebar-carousel">
            <!-- Carousel items -->
            <div class="carousel-inner">
              <div class="active item">
                <div id='idea_of_the_month'>
                  <div class="topten_idea media iom">
                    <% month = @first.created_at.month %>
                    <% case month %>
                    <% when 1 %>
                    <h3 class='text-center month'>January</h3>
                    <% when 2 %>
                    <h3 class='text-center month'>February</h3>
                    <% when 3 %>
                    <h3 class='text-center month'>March</h3>
                    <% when 4 %>
                    <h3 class='text-center month'>April</h3>
                    <% when 5 %>
                    <h3 class='text-center month'>May</h3>
                    <% when 6 %>
                    <h3 class='text-center month'>June</h3>
                    <% when 7 %>
                    <h3 class='text-center month'>July</h3>
                    <% when 8 %>
                    <h3 class='text-center month'>August</h3>
                    <% when 9 %>
                    <h3 class='text-center month'>September</h3>
                    <% when 10 %>
                    <h3 class='text-center month'>October</h3>
                    <% when 11 %>
                    <h3 class='text-center month'>November</h3>
                    <% when 12 %>
                    <h3 class='text-center month'>December</h3>
                    <% end %>
                    <a class="pull-left" href="#">
                      <span class="image"><%= image_tag(@first.photo.url(:thumb), :size => "80x80") %></span>
                    </a>
                    <div class="media-body">
                      <h4 class="media-heading idea winning-ideaa">
                        <%= link_to @first.title ,@first %>
                      </h4>
                      <span>by <%= link_to @first.user.username, @first.user.becomes(User) %></span>
                      <br /><br />
                      <span class="badge badge-topten"><%= @first.num_votes %>
                        votes</span>
                      </div>
                    </div>
                  </div>
                </div>
                <% @winners.each do |second| %>
                  <% @second=Idea.find(second.idea_id) %>
                    <div class="item">
                      <div id='idea_of_the_mouth'>
                        <div class="topten_idea media iom">
                          <% month = @second.created_at.month %>
                          <% case month %>
                            <% when 1 %>
                            <h3 class='text-center month'>January</h3>
                            <% when 2 %>
                            <h3 class='text-center month'>February</h3>
                            <% when 3 %>
                            <h3 class='text-center month'>March</h3>
                            <% when 4 %>
                            <h3 class='text-center month'>April</h3>
                            <% when 5 %>
                            <h3 class='text-center month'>May</h3>
                            <% when 6 %>
                            <h3 class='text-center month'>June</h3>
                            <% when 7 %>
                            <h3 class='text-center month'>July</h3>
                            <% when 8 %>
                            <h3 class='text-center month'>August</h3>
                            <% when 9 %>
                            <h3 class='text-center month'>September</h3>
                            <% when 10 %>
                            <h3 class='text-center month'>October</h3>
                            <% when 11 %>
                            <h3 class='text-center month'>November</h3>
                            <% when 12 %>
                            <h3 class='text-center month'>December</h3>
                            <% end %>
                          <a class="pull-left" href="#">
                            <span class="image"><%= image_tag(@second.photo.url(:thumb), :size => "80x80") %></span>
                          </a>
                          <div class="media-body">
                            <h4 class="media-heading idea winning-idea">
                              <%= link_to @second.title ,@second %>
                            </h4>
                            <span>by <%= link_to @second.user.username, @second.user.becomes(User) %></span>
                            <br /><br />
                            <span class="badge badge-topten"><%= @second.num_votes %>votes</span>
                          </div>
                        </div>
                      </div>
                    </div>
                <% end %>
            </div>
                <!-- Carousel nav -->
                <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
          </div>
        </div>
      <% end %>
      <div class="trending-ideas well">
        <%= render :partial => '/trends/index'%>
      </div>
      <div class="topten_ideas well">
        <div id="topten_title well">
          <h3 class="title sidebar_title show">Top 10 Ideas<i class="icon-minus-sign show-sign"></i></h3>
        </div>
        <div id="topten-content">
          <% @top.each do |top| %>
            <% if top.user.active == true and top.user.banned == false%>
              <div class="topten_idea media well">
                <h4 class="media-heading idea">
                  <a data-popover-idea-id=<%=top.id %>>
                    <%= top.title %>
                  </a>
                </h4>
                <a class="pull-left" href="#">
                  <span class="image"><%= image_tag(top.photo.url(:thumb), :size => "40x40") %></span>
                </a>
                <div class="media-body">
                  <span>by <%= link_to top.user.username, top.user.becomes(User) %></span>
                  <br>
                  <span class="badge badge-topten"><%= top.num_votes %>
                    votes</span>
                </div>
              </div>
            <% end %>
          <%end%>
        </div>
      </div>

      <div class="affix" data-spy='affix'>
        <button class="btn backtotop" type="button">To Top
          <i class = 'icon-black icon-hand-up'></i>
        </button>
      </div>
    </div>
    <div class="sidebar-show">
      <button class="icon-circle-arrow-left well btn sidebar-btn"></button>
    </div>
  </div>
</div>
