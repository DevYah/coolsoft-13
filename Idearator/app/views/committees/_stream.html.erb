<% @ideas.each do |approved| %>
  <% if approved.user.active == true and approved.user.banned == false %>
    <div class ="row block span10" id='idea-<%= approved.id %>'>
      <div class = "wrapper">
        <div class = "span2 in-line"><%= image_tag approved.photo.url(:medium)  %></div>
        <div class = "span6">
          <div class = "span1 pull">
            <%= link_to approved.user.username , approved %>
          </div>
          <h3>
            <%= link_to  approved.title , approved %>
          </h3>
          <%= approved.description %>
          <ul class ="inline">
            <% approved.tags.each do |tag| %>
              <li style = "color: #0060ff;"><%= tag.name %></li>
            <% end %>
          </ul>
          <span class = "idea-vote inline "><%=  approved.num_votes.to_s %></span>
          <br>
            <button class = "btn btn-large btn-success inline pull-right margin " type = "button">
              Vote!
            </button>
          </div>
          <a href="#MyModal" role="button" class="btn btn-success" data-toggle="modal"
data-backdrop='true' data-keyboard='true' data-show='true' data-remote='false'>Approve</a>
          <!-- Modal -->
          <div id="MyModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
              <h1>Add your prespectives</h1>
              <% session[:idea_id]= approved.id %>
            </div>
            <div class="modal-body">
              <% if current_user.type == 'Committee' %>
                <input type="text" id="rating_complete" name="blah2" />
                <ul id="rating">
                </ul>
                <div id ="flash">
                </div>
                <div id ="ratings">
                </div>
              <% end %>
            </div>
            <div class="modal-footer">
              <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
              <%= button_to_function "Submit Prespectives" , "sendAjax()" ,:class => 'btn btn-primary'%>
               <script type="text/javascript">
                  function sendAjax(){
                    var list = "";
                    var i=0;
                    $('.token-input-list-facebook li p').each(function(){
                      list += "rating[]="+$(this).text()+"&";
                      i=i+1;
                  
                    });
                    $('#MyModal').modal('hide');
                    $.ajax("/add_rating?"+list);
                  }
                </script>
            </div>
          </div>
          <%= link_to 'Disapprove', { :controller => "committees", :action => "disapprove", :id => approved.id} ,:confirm => "Are you sure you want to disapprove this idea?",:class => 'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  <% end %>
