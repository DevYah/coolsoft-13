<%= form_for(@idea, :html => { :multipart => true }) do |i| %>
  <fieldset>
    <% if @idea.errors.any? %>
      <div id = 'error_explanation'>
        <% @idea.errors.full_messages.each do |msg| %>
          <span><%= msg %></span>
        <% end %>
      </div>
    <% end %>
    <div class='row span12'>
      <div class='span5'>
          <p class='form-picture'>
            <img alt="Missing" id="image-edit-link" src="/assets/missing.png" class="image-placeholder">
            <%= i.file_field :photo, class: 'amina'%>
          </p>
          <label>Tags</label>
          <div id="idea-tags">
            <% Tag.all.each do |tag|%>
              <div class='idea-tag'>
                <%= check_box_tag 'idea[tag_ids][]', tag.id, @idea.tags.include?(tag), data: {tag_name: tag.name } %>
                <%= tag.name %>
              </div>
            <% end %>
            <span class = 'help-inline'>Please check the relative tags</span>
          </div>
      </div>
      <div class='span6'>
        <div class='control-group' >
        <%= i.label :title , :class=> 'control-label'%>
        <div class='controls'>
          <% if @boolean%>
            <%= i.text_field :title, :class=> 'text_field red-text-field', :placeholder=>'Write title here...',:readonly => 'true'%>
            <span class='help-inline'>Sorry you can't change the title</span>
          <%else%>
            <%= i.text_field :title, :class=> 'text_field red-text-field', :placeholder=>'Write title here...',:required => true %>
            <span class="hint red-hint"> Choose a short descriptive title for your idea! <span class="hint-pointer"> </span> </span>
          <%end%>
        </div>
      </div>
        <div class='control-group'>
          <%= i.label :description, :class=> 'control-label'%>
          <div class="controls">
            <%= i.text_area :description, :class=> 'text_field green-text-field', :size => "5x5", :placeholder=>"Write description here...",:required => true %>
            <span class="hint green-hint"> Describe your idea in an easy to understand way. <span class="hint-pointer"> </span> </span>
          </div>
        </div>
        <div class="control-group">
          <%= i.label :problem_solved,:class=> 'control-label'%>
          <div class="controls">
            <%= i.text_area :problem_solved,:class=> 'text_field purple-text-field', :size => "5x5", :placeholder=>'Write problem solved here...'%>
            <span class="hint purple-hint"> Describe the problem your idea could solve. <span class="hint-pointer"> </span> </span>
          </div>
        </div>
      </div>
    </div>
    <div class='actions row span12'>
      <br />
      <%= i.submit nil, :class=> 'btn btn-primary'%>
    </div>
  </fieldset>
<% end %>
