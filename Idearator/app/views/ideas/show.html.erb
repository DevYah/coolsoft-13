<div id='fb-root'></div>
<p id='notice'><%= notice %></p>
<div class='media'>
  <a  class='pull-left' href='#'>
    <%= image_tag @idea.photo.url(:medium) %>
  </a>
  <p>
    <b>Title:</b>
    <div><%= @idea.title %></div>
    <% if @user == @idea.user_id %>
      <div class='btn-group'>
        <%= link_to 'Edit', edit_idea_path(@idea) ,:class => 'btn btn-inverse' %>
        <%= link_to 'Delete', idea_path(@idea), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
      </div>
      <h2><%= @username %></h2>
    <%end%>
  </p>
</div>
<div class='media-body'>
  <%if @idea.archive_status == false%>
    <div id='show' class='container'>
      <%= image_tag('f_logo.jpg', :id => 'fbk')%>
      <%= image_tag('twitter-bird-white-on-blue.jpg', :id => 'tw')%>
      <a class="popup" href="http://pinterest.com/pin/create/button/?url=<%=root_url + url_for(approved)%>&media=<%=root_url + @idea.photo.url %>&description=<%= @idea.description%>" class="pin-it-button" count-layout="horizontal"><%= image_tag("pinterest_badge_red.png", :id => "pin")%></a>
    </div>
  <%end%>
  <p>
    <h3>Description:</h3>
    <div><%= @idea.description %></div>
  </p>
  <p>
    <h3>Problem Solved:</h3>
    <div><%= @idea.problem_solved  %></div>
  </p>
</div>
