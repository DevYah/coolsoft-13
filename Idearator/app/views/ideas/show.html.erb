<% if current_user %>
    <% if current_user.type == "Committee" %>
        <% if (current_user.tags & @idea.tags).count > 0 && @idea.approved == 0 %>
	        <%= link_to 'Approve', { :controller => "committees", :action => "add_prespectives" }, :id => params[:id],:confirm => "Are you sure you want to approve this idea?",:class => 'btn btn-success' %>
	        <p>  OR  </p>
	        <%= link_to 'Disapprove', { :controller => "committees", :action => "disapprove" }, :id => params[:id],:confirm => "Are you sure you want to disapprove this idea?",:class => 'btn btn-danger' %>
	    <% end %>
    <% end %>
<% end %>    
 

<div id="fb-root"></div>
<p id="notice"><%= notice %></p>
<div class='media'>
	<a  class="pull-left" href="#">
		<%= image_tag @idea.photo.url(:medium) %>
	</a>
	<p>
		<b>Title:</b>
		<div><%= @idea.title %></div>
		<% if @user == @idea.user_id %>
			<div class="btn-group">
				<%= link_to 'Edit', edit_idea_path(@idea) ,:class => "btn btn-inverse" %>
				<%= link_to 'Delete', idea_path(@idea), :method => :delete, :confirm => "Are you sure?", :class => 'btn btn-danger' %>
			</div>
			<h2><%= @username %></h2>
		<%end%>
	</p>
</div>
<div class="media-body">
	<p>
		<h3>Description:</h3>
		<div><%= @idea.description %></div>
	</p>
	<p>
		<h3>Problem Solved:</h3>
		<div><%= @idea.problem_solved  %></div>
	</p>
</div>
<td><%= link_to 'Back', '/',:class => "btn" %></td>
<%if @idea.archive_status == false%>
	<button id="share" class="btn btn-primary" type="button">Share</button>	
	<div id="show" class="container"> 
		<%= image_tag("f_logo.jpg", :id => "fbk")%>
		<%= image_tag("twitter-bird-white-on-blue.jpg", :id => "tw")%>
	</div>		
<%end%>
