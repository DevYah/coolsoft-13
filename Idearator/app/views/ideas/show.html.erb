<p id='notice'><%= notice %></p>
<script type ='text/javascript" src="//assets.pinterest.com/js/pinit.js'></script>
<div class='media'>
<a  class="pull-left" href="#">
<%= image_tag @idea.photo.url(:medium) %>
</a>
<p>
<b>Title: </b>
<div><%= @idea.title %></div>
<% if @user == @idea.user_id %>
<div class="btn-group">
<%= link_to 'Edit', edit_idea_path(@idea) ,:class => "btn btn-inverse" %>

<!--! add here archive and delete buttons -->
</div>
<%end%>
</p>
</div>
<div class="media-body">
<p>
<b>Description:</b>
<div><%= @idea.description %></div>
</p>
<p>
<b>Problem Solved:</b>
<div><%= @idea.problem_solved  %>
	<a href="http://pinterest.com/pin/create/button/?url=http://localhost:3000/ideas/8&media=<%= @idea.photo.url %>&description=<%= @idea.description%>" class="pin-it-button" count-layout="horizontal"><img border="0" src="//assets.pinterest.com/images/PinExt.png" title="Pin It" /></a>
	
</p>
</div>

<h5>Comments</h5>
<table>
<% @idea.comments.each do |comment| %>
<tr>
<td><blockquote><p><%= comment.content %></p><small> created <%= time_ago_in_words comment.created_at %> ago </small></blockquote> </td>
<td><%= link_to "<i></i>".html_safe, [@idea, comment], :method=>:delete, :class=> "icon-remove", :confirm => 'Are you sure?' %>
	<%= link_to "<i></i>".html_safe, edit_idea_comment_path(@idea,comment), :id => "button_id", :class => "icon-edit" %> <%= comment.num_likes %> likes</td><td><td>
  </tr>
 <% end %>
</table><br>
<h5>Add a comment:</h5>
<%= form_for([@idea, @idea.comments.create]) do |f| %>

<%= f.label :content %><br />
<%= f.text_area :content %>
<i class="icon-plus"> <%= f.submit 'Post comment'%></i>

<% end %>
<td><%= link_to 'Back', '/',:class => "btn" %></td>


