<div id='signedout' class='modal hide fade' data-backdrop='static' data-keyboard='false'>
  <div class='modal-header'>
    <button type='button' class='close' data-dismiss='modal' aria-hidden='true'>Ã—</button>
      <h3 class='text-center'>Looks like you want to sign up with us!</h3>
  </div>
  <div class='modal-body unauthorized-body'>
      <div class='container unauth-huge unauth-left'>
        <div class='row'>
          <div class='span6 unauth-width'>
            <div class='span4 well unauth-min-height unauthorized-sign-up'>
              <%= render 'users/sign_up_form' %>
            </div>
            <div class='well span2 unauth-buttons unauth-min-height unauthorized-sign-in-up'>
              <h1 class='text-center'>OR</h1>
              <a id='unauth-sign-in-button' class='btn btn-large btn-block unauthorized-sign-in'>Sign in</a>
              <div class='unauth-social-media'>
                <ul class='inline unstyled'>
                  <li><%= link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook),
                   :class => 'popup social-media-login facebook-nav-login inline unauth-sign-in',
                   "data-width" => 600, "data-height" => 500 %>
                  </li>
                  <li>
                    <%= link_to 'Sign in with Twitter', user_omniauth_authorize_path(:twitter),
                  :class => 'popup social-media-login twitter-nav-login inline unauth-sign-in',
                  'data-width' => 600, 'data-height' => 500  %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class='span6 unauth-width'>
            <div class='well span2 unauth-buttons unauth-min-height unauthorized-sign-in-up unauth-change-margin'>
              <h1 class='text-center'>OR</h1>
              <a id='unauth-sign-up-button' class='btn btn-large btn-block unauthorized-sign-up'>Sign up</a>
            </div>
            <div class='span4 well unauth-min-height unauthorized-sign-up'>
              <%= render 'users/sign_in_form' %>
            </div>
          </div>
        </div>
      </div>
      <div class='row'>
        <div class='well unauthorized-sign-in-up span6'>
          <%= render 'users/sign_in_form' %>
        </div>
        <div class='well span2 unauth-buttons unauthorized-sign-in-up'>
          <h1 class='text-center'>OR</h1>
          <a class='btn btn-large btn-block unauthorized-sign-up'>Sign up</a>
        </div>
      </div>
  </div>
</div>
