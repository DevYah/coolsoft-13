    <li>
    <%= link_to('Sign out', destroy_user_session_path, :method=>:delete) %>
    </li>
  <% else %>
    <li>
    <%= link_to('Register', new_user_session_path)  %>
    </li>
  <% end %>
  <% if user_signed_in? %>
    <li>
