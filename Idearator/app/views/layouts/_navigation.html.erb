<a class="brand" href="/home/index"><i class="icon-lightbulb icon-large"></i></a>
<ul class='nav'>
  <li class="divider-vertical"></li>
  <% if user_signed_in? %>
    <li class="dropdown">
      <a id = "count" class="dropdown-toggle" data-toggle="dropdown" href="#">
        <%if @count == 0%>
          <span class="badge badge-inverse"><%= @count %></span>
        <%else%>
          <span class="badge badge-important"><%= @count %></span>
        <%end%>
        <b class="caret"></b>
      </a>
      <ul id = "update-dropdown" class="dropdown-menu custom-dropdown">
        <%= render 'notifications/view_notifications' %>
      </ul>
    </li>
  <% end %>
</ul>
<ul id="nav_login" class="nav pull-right">
  <% if not user_signed_in? %>
    <li><%= link_to('Sign in', new_user_session_path) %></li>
    <li>
      <%= link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook),
                 :class => 'popup social-media-login facebook-nav-login',
                 "data-width" => 600, "data-height" => 500 %>
    </li>
    <li>
      <%= link_to 'Sign in with Twitter', user_omniauth_authorize_path(:twitter),
                :class => 'popup social-media-login twitter-nav-login',
                'data-width' => 600, 'data-height' => 500  %>
    </li>
  <% end %>
</ul>
<ul class="nav">
  <% if user_signed_in? %>
    <% if current_user.is_a? Committee%>
      <li>
        <%= link_to('Dashboard', controller: 'dashboard' , action: 'index') %>
      </li>
    <% end %>
    <% if current_user.ideas.count != 0 %>
      <li>
        <%= link_to('My Ideas', controller: 'users', action: 'my_ideas', :id => current_user.id) %>
      </li>
    <% end %>
    <% if current_user.is_a? Investor%>
      <%= link_to('My Competitions', controller: 'competitions', action: 'index') %>
    <% end %>
  <% end %>
  <li>
    <% if params[:controller] == 'home' %>
      <%= form_tag "/home/search", :method => :get,:class => "form-search", :id => 'searchdiv', :remote => true do %>
        <p class = "input-append">
          <%= text_field_tag :search, params[:search], :placeholder => "Search....." ,:class => "span2 search-query"%>
          <button class='btn btn-info'>
            <i class="icon-search icon-white"></i>
          </button>
        </p>
      <% end %>
    <% else %>
      <%= form_tag "/home/searchelse", :method => :get,:class => "form-search", :id => 'searchdiv', :remote => true do %>
        <p class = "input-append">
          <%= text_field_tag :search, params[:search], :placeholder => "Search....." ,:class => "span2 search-query"%>
          <button class='btn btn-info'>
            <i class="icon-search icon-white"></i>
          </button>
        </p>
      <% end %>
    <% end %>
  </li>
</ul>
<% if user_signed_in? %>
  <ul class="nav pull-right">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user"></i><%= current_user.username %>
        <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li>
          <a href="#myModal" data-toggle="modal"><i class="icon-wrench"></i>
            Account Settings</a>
        </li>
        <li>
          <%= link_to('My Profile', current_user.becomes(User)) %>
        </li>
        <li>
          <%= link_to('Sign out', destroy_user_session_path, :method=>:delete) %>
        </li>
        <li>
          <%= link_to('Deactivate', controller: 'users' , action: 'confirm_deactivate') %>
        </li>
      </ul>
    </li>
  </ul>
<% end %>
<%if user_signed_in? and current_user.is_a? Admin%>
  <ul class="nav pull-right">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><a href="/admins/invite">Invite</a></li>
        <li><%= link_to "Tag Management", tags_path %></li>
      </ul>
    </li>
  </ul>
<%end%>
