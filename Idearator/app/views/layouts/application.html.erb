<!DOCTYPE html>
<html>
<head>
  <title>Sprint0</title>

  <%= stylesheet_link_tag    "application", :media => "all" %>
 
  <%= csrf_meta_tags %>

  <div id="user_nav">
    <% if user_signed_in? %>
        Signed in as <%= current_user.email %>. This is not you?
        <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
    <% else %>
        <%= link_to 'Register', new_user_registration_path %> or <%= link_to 'Sign in', new_user_session_path %> 
    <% end %>
  </div>
  <% if user_signed_in? %>
    <%= link_to 'Deactivate', controller: 'users' , action: 'confirm_deactivate' %>
<% end %>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Idearator" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag "application", :media => "screen" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class>
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <!--! Add/edit the navigation links in the _navigation partial-->
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
          <footer>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>

