<h1>Create Your Blog</h1>

<%= form_for @blog do |f| %>
  <% if @blog.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions"><%= f.submit "Create!" %></div>
<% end %>
