<% title "Ideas" %>

<%= form_tag ideas_path, :method => :get do %>
	<p>
		<%= text_field_tag :search, params[:search]%>
		<%= submit_tag "search", :name => nil%>
	</p>
<% end %>
<table>
	<tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

  <% @ideas.each do |idea| %>
    <tr>
    <td><%= link_to idea.title, idea %></td>
    <td><%= idea.body %></td>
    <%end%>
  </tr>
  <% end %>
</table>