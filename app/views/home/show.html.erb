<body class = overview>
<h1>Idearator</h1>

<%= form_tag "/home/show", :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
 <style type="text/css">
    .idea
    {
        background-color: #CCFF33;
        
    }
    .overview{
      background-color: #99CCFF
    }
    </style>
    <% if params[:search] != ""%>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>
  <% if @ideas.count > 0 %>
<% @ideas.each do |i| %>
<div class = idea>
  <tr>
    <td><%= image_tag i.photo.url(:thumb) %></td>
    <td><%= link_to i.title, i %></td>
    <td><%= i.description %></td>
  </tr>
<% end %>
<% end %>
</div>
</table>
<table>
<tr>
  <% if @ideas.count > 0 %>
<td><%= @ideas.count %></td>
<td><h4>results found</h4></td>
<% end %>
</tr>
<% if @ideas.count == 0 %>
<em>No Results Found !!</em>
<% end %>
<%= form_tag "/home/", :method => :get do %>
  <p>
    <%= submit_tag "Back to Stream", :name => nil %>
  </p>
<% end %>
</table>
<%end%>
<% if params[:search] == ""%>
<em>
Ohh! you entered nothing in the search field
</em>
<%= form_tag "/home/", :method => :get do %>
  <p>
    <%= submit_tag "Back to Stream", :name => nil %>
  </p>
<% end %>
<% end %>
</body>
