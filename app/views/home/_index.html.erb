<% @no = 0 %>
<% if params[:search] != ""%>
  <% @search.each do |approved| %>
    <% if approved.user.active == true and approved.user.banned == false and approved.approved == true%>
      <% @no = @no + 1 %>
    <% end %>
  <% end %>
<% end %>
<div class='row'>
  <div class='span8'>
    <% if @no > 0%>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong><%= @no %></strong>
        Ideas Found
      </div>
    <% else %>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>No Results Found</strong>
      </div>
    <% end %>
    <% if params[:search] != ""%>
      <% @search.each do |approved| %>
        <% if approved.user.active == true and approved.user.banned == false and approved.approved == true%>
          <div class="span8 row">
            <div class="wrapper row">
              <div class="span2"><%= image_tag approved.photo.url(:medium) %></div>
              <div class="span6">
                <div class="span1 pull-right">
                  <%= link_to approved.user.username , approved %>
                </div>
                <h3>
                  <%= link_to  approved.title , approved %>
                </h3>
                <%= approved.description %>
                <ul class ="inline">
                  <% approved.tags.each do |tag| %>
                    <li style = "color: #0060ff;"><%= tag.name %></li>
                  <% end %>
                </ul>
                <span class="idea-vote inline"><%=  approved.num_votes.to_s %></span>
                <br/>
                <button class="btn btn-large btn-success inline pull-right margin " type="button">
                  Vote!
                </button>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
