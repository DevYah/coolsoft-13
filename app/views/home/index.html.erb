<style type="text/css">
.topten{
	position: relative;
	left: 75%;
	width: 300px;
	height: 200px;

}
.topten_idea{
		height:70px;
	width: 300px;
background-color: #999999;
border-style: solid;
border-width: 1px;
border-color: white;
	
}
.spam{
	width: 50px;
}
</style>
</style>
<div class="topten">
<h1>Top Ten Ideas</h1>
<% @top.each do |top| %>
<div class="topten_idea">
	
	<span><%= link_to top.title ,top %></span>
	<span><%= top.num_votes %></span>
	<span><%= top.user.first_name %></span>
	<span class = size><%= image_tag top.photo.url(:thumb) %></span>

	
</div>
<% end %>
</div>