<div id='tags'>
  <% if @tags2 %>
    <% @tags2.each do |tag| %>
      <label><%= tag %></label>
    <% end %>
  <% end %>
</div>
<%= render 'ideas/show' %>
<div id = "IdeaStream">
  <div class = "page">
    <%= render :partial => 'stream' %>
  </div>
 </div>

<p id="notice"><%= notice %></p>
<% content_for :sidebar do %>
  <%= link_to 'Post an idea', {:controller => 'ideas' ,:action => 'new'},:class => "btn btn-large btn-primary btn-block"%>
<% end %>
<% content_for :sidebar do %>
<div id="topten">
<h1>Top Ten Ideas</h1>
<% @top.each do |top| %>
<div class="topten_idea">
	<span><%= link_to top.title ,top %></span>
	<span><%= top.num_votes %></span>
	<span><%= top.user.first_name %></span>
</div>
<% end %>
</div>
<% end %>


