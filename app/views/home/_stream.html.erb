<div id="Stream">
  <% @approved.each do |approved| %>
    <% if approved.user.active == true and approved.user.banned == false and approved.approved == true%>
      <div class="span8 row">
        <div class="wrapper row block">
          <div class="span2"><%= image_tag approved.photo.url(:medium) %>
          </div>
          <div class="span6">
            <div class="span1 pull-right">
              <%= link_to approved.user.username , approved %>
            </div>
            <h3>
              <%= link_to  approved.title , approved %>
            </h3>
            <%= approved.description %>
            <ul class ="inline">
              <% approved.tags.each do |tag| %>
                <li style = "color: #0060ff;"><%= tag.name %></li>
              <% end %>
            </ul>
            <span class="idea-votes inline pull-right"><%=  approved.num_votes %></span>
            <% @approve=approved %>
            <%if user_signed_in?%>
              <% @ideavotehome= current_user.votes.detect { |w|w.id == @approve.id } %>
            <%end%>
            <%if @ideavotehome.nil? %>
              <%= link_to 'Vote', { :controller => "ideas", :action => "vote", :id => @approve.id },remote: true,:class =>"btn btn-large btn-success inline pull-right margin" %>
            <% else %>
              <%= link_to 'Unvote', { :controller => "ideas", :action => "unvote" , :id => @approve.id},:confirm => "Are you sure?",remote:true,:class => 'btn btn-large btn-danger inline pull-right margin ' %>
            <%end%>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>