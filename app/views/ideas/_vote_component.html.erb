<div class='span4 vote-component'>
  <div class='span4 vote-count'><%= idea.votes_count %></div>
  <div class='span4'>
    <% if user_signed_in? && current_user.voted_for?(idea) %>
      <%= link_to 'Unvote', { :controller => "ideas", :action => "unvote", :id => idea.id}, remote:true, :class => 'btn  btn-danger margin' %>
    <% else %>
      <%= link_to 'Vote', { :controller => "ideas", :action => "vote", :id => idea.id }, remote: true, :class =>"btn btn-success margin" %>
    <% end %>
  </div>
</div>
