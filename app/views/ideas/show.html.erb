<div id="fb-root"></div>
<p id="notice"><%= notice %></p>
<div class='media'>
	<a  class="pull-left" href="#">
		<%= image_tag @idea.photo.url(:medium) %>
	</a>
	<p>
		<b>Title:</b>
		<div><%= @idea.title %></div>
		<% if @user == @idea.user_id %>
			<div class="btn-group">
				<%= link_to 'Edit', edit_idea_path(@idea) ,:class => "btn btn-inverse" %>
				<%= link_to 'Delete', idea_path(@idea), :method => :delete, :confirm => "Are you sure?", :class => 'btn btn-danger' %>
			</div>
			<h2><%= @username %></h2>
		<%end%>
	</p>
</div>
<div class="media-body">
	<p>
		<h3>Description:</h3>
		<div><%= @idea.description %></div>
	</p>
	<p>
		<h3>Problem Solved:</h3>
		<div><%= @idea.problem_solved  %></div>
	</p>
</div>
<legend><h4 class ="title2">Comments</h4></legend>
		<div id='like'>
		<table>
			<% @idea.comments.each do |comment| %>
				<tr>
    			<td>
    				   <div class="alert alert-info">

    				<blockquote>

    					<label class="commentContent">
                          <%= comment.content %>
    					</label>
    					<small> 
    						added <%= time_ago_in_words comment.created_at %> ago  and updated <%= time_ago_in_words comment.updated_at %> ago 
    					</small>
    				</blockquote> 
    			
					
					<p class ="buttons">	<%= link_to "<i></i>".html_safe, [@idea, comment], :method=>:delete, :class=> "icon-remove", :confirm => 'Are you sure?' %>
							<% if @likes.detect {|x| x.comment_id == comment.id}.nil? %>
								<%= link_to "<i>+1</i>".html_safe ,:class => " icon-thumbs-up", :controller => 'ideas', :action => 'like', :commentid => comment.id,:id =>@idea.id, :remote => true %>
							<% end %> 
							<%= link_to "<i></i>".html_safe, edit_idea_comment_path(@idea,comment), :id => "button_id", :class => "icon-edit" %> 
						<small class = "text-info">
							<%= comment.num_likes %> likes
						</small></p>
					</td>
				</tr>
					<% end %>
		</table>
		</div>
	</div>
<div class = "addComment">
	<h5 class = "title1">Add a comment:</h5>
	<%= form_for([@idea, @idea.comments.create]) do |f| %>

  		<div class="controls">
     <div class ="textArea1" >
  		<%= f.text_area :content ,:size => "6x6",:class => 'text_area',:placeholder=>"Write comment here..."%>
		</div> 
	</div>
  		<%= f.submit nil, :class => 'btn btn-small btn-primary'%>
	<% end %>

	<td><%= link_to 'Back', '/',:class => "btn" %></td>
	<%if @idea.archive_status == false%>
	 	<button id="share" class="btn btn-primary" type="button">Share</button>	
		<div id="show" class="container"> 
		<%= image_tag("f_logo.jpg", :id => "fbk")%>
		<%= image_tag("twitter-bird-white-on-blue.jpg", :id => "tw")%>
	</div>	
</div>	
<%end%>