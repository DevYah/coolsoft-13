<div id="fb-root"></div>
<p id="notice"><%= notice %></p>
<div class='media'>
	<a  class="pull-left" href="#">
		<%= image_tag @idea.photo.url(:medium) %>
	</a>
	<p>
		<b>Title:</b>
		<div><%= @idea.title %></div>
		<% if @user == @idea.user_id %>
			<div class="btn-group">
				<%= link_to 'Edit', edit_idea_path(@idea) ,:class => "btn btn-inverse" %>
				<span class="caret"></span>
				<!--! add here archive and delete buttons -->
			</div>
		<%end%>
	</p>
</div>
<div class="media-body">
	<p>
		<b>Description:</b>
		<div><%= @idea.description %></div>
	</p>
	<p>
		<b>Problem Solved:</b>
		<div><%= @idea.problem_solved  %></div>
	</p>
</div>
<td><%= link_to 'Back', '/',:class => "btn" %></td>
<%if @idea.archive_status == false%>
	<button id="share" class="btn btn-primary" type="button">Share</button>	
	<div id="show" class="container"> 
		<a id="twitter" href="https://twitter.com/share" class="twitter-share-button" data-text="Checkout this idea on Idearator" data-count="none">Tweet</a>
		<a></a>
		<div id="fb" class="fb-like" data-send="false" data-layout="button_count" data-width="250" data-show-faces="false" data-font="arial"></div>
	</div>					
<%end%>

