<p id="notice"><%= notice %></p>
<div class='media'>
	<a  class="pull-left" href="#">
		<%= image_tag @idea.photo.url(:medium) %>
	</a>
	<p>
		<b>Title:</b>
		<div><%= @idea.title %></div>
		<% if @user == @idea.user_id %>
			<div class="btn-group">
				<%= link_to 'Edit', edit_idea_path(@idea) ,:class => "btn btn-inverse" %>
			</div>
		<%end%>
	</p>
</div>
<div class="media-body">
	<p>
		<b>Description:</b>
		<div><%= @idea.description %></div>
	</p>
	<p>
		<b>Problem Solved:</b>
		<div><%= @idea.problem_solved  %></div>
	</p>
</div>

<h5>Comments</h5>
<table>
  <% @idea.comments.each do |comment| %>
  <tr>
      <td><blockquote><p><%= comment.content %></p><small> added <%= time_ago_in_words comment.created_at %> ago  and updated <%= time_ago_in_words comment.updated_at %> ago</small></blockquote> </td>
<td><%= link_to "<i></i>".html_safe, [@idea, comment], :method=>:delete, :class=> "icon-remove", :confirm => 'Are you sure?' %>
  </tr>
 <% end %>
</table><br>
<h5>Add a comment:</h5>
<%= form_for([@idea, @idea.comments.create]) do |f| %>
<div class="controls">
    <%= f.text_area :content ,:class => 'text_area',:placeholder=>"Write comment here..." , :size => "5x5"%>
  </div>
    <%= f.submit nil, :class => 'btn btn-small btn-primary'%>

<% end %>
<td><%= link_to 'Back', '/',:class => "btn" %></td>
