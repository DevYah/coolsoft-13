<div id="fb-root"></div>
<p id="notice"><%= notice %></p>
<div class='media'>
	<a  class="pull-left" href="#">
		<%= image_tag @idea.photo.url(:medium) %>
	</a>
	<p>
		<b>Title:</b>
		<div><%= @idea.title %></div>
		<% if @user == @idea.user_id %>
			<div class="btn-group">
				<%= link_to 'Edit', edit_idea_path(@idea) ,:class => "btn btn-inverse" %>
				<%= link_to 'Delete', idea_path(@idea), :method => :delete, :confirm => "Are you sure?", :class => 'btn btn-danger' %>
			</div>
			<h2><%= @username %></h2>
		<%end%>
	</p>
</div>
<div class="media-body">
	<p>
		<h3>Description:</h3>
		<div><%= @idea.description %></div>
	</p>
	<p>
		<h3>Problem Solved:</h3>
		<div><%= @idea.problem_solved  %></div>
		<h5>Comments</h5> </p></div>

<table>
<% @idea.comments.each do |comment| %>
<tr>
<td><blockquote><p><%= comment.content %></p><small> created <%= time_ago_in_words comment.created_at %> ago </small></blockquote> </td>
<td><%= link_to "<i></i>".html_safe, [@idea, comment], :method=>:delete, :class=> "icon-remove", :confirm => 'Are you sure?' %>
	<%= link_to "<i></i>".html_safe, edit_idea_comment_path(@idea,comment), :id => "button_id", :class => "icon-edit" %> <%= comment.num_likes %> likes</td><td><td>
  </tr>
 <% end %>
</table><br>
<h5>Add a comment:</h5>
<%= form_for([@idea, @idea.comments.create]) do |f| %>
 <div class="controls">
    <%= f.text_area :content ,:class => 'text_area',:placeholder=>"Write comment here..." , :size => "5x5"%>
  </div>
    <%= f.submit nil, :class => 'btn btn-small btn-primary'%>

<% end %>
<td><%= link_to 'Back', '/',:class => "btn" %></td>
<%if @idea.archive_status == false%>
	<button id="share" class="btn btn-primary" type="button">Share</button>	
	<div id="show" class="container">
		<%= image_tag("f_logo.jpg", :id => "fbk")%>
		<%= image_tag("twitter-bird-white-on-blue.jpg", :id => "tw")%>
		<a href="http://pinterest.com/pin/create/button/?url=<%=root_url + url_for(@idea)%>&media=<%=root_url + @idea.photo.url %>&description=<%= @idea.description%>" class="pin-it-button" count-layout="horizontal"><%= image_tag("pinterest_badge_red.png", :id => "pin")%></a>
	</div>		

