<div class = 'well notification invite-committee-notification <%= read ? 'read' : 'unread' %>' data-notification = <%= notification.id %> data-time=<%= notification.created_at.to_i %>>
  <span><%= notification.text %></span>
  <div class = 'notification-link'><a>choose area of expertise</a></div>
  <span class = 'notification-date'>
  	<% if ((Time.now - notification.created_at).to_i)/24/60/60 < 1 %>
       <%= distance_of_time_in_words(notification.created_at.to_time, Time.now).to_s + " ago" %>
     <% else %>
       <%= Notification.getDate(notification.id) %>
     <% end %>
  </span>
</div>