<div class = 'well notification invite-committee-notification <%= read ? 'read' : 'unread' %>' data-notification = <%= notification.id %> data-time=<%= notification.created_at.to_i %>>
  <span><%= notification.text %></span>
  <div class = 'notification-link'><%= link_to 'choose area of expertise', {controller: 'users', action: 'expertise'}, remote: true %></div>
  <span class = 'notification-date'><%= notification.created_at.to_s(:long)%></span>
</div>