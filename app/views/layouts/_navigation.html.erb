<%= link_to "Home", root_path, :class => 'brand' %>
<ul class='nav'>
  <% if user_signed_in? %>
    <li class="dropdown">
      <a id="count" class="dropdown-toggle" data-toggle="dropdown" href="#">
        <%if @count == 0%>
          <span class="badge badge-inverse"><%= @count %></span>
        <%else%>
          <span class="badge badge-important"><%= @count %></span>
        <%end%>
        <b class="caret"></b>
      </a>
      <ul id="update-dropdown" class="dropdown-menu">
        <%= render 'notifications/view_notifications' %>
      </ul>
    </li>
    <% if current_user.is_a? Committee%>
      <li>
        <%= link_to('Dashboard', controller: 'dashboard' , action: 'index') %>
      </li>
    <% else %>
      <% if current_user.ideas != nil %>
        <li>
          <%= link_to('Dashboard', controller: 'dashboard' , action: 'index') %>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
<ul class="nav pull-right">
  <% if not user_signed_in? %>
    <li>
      <%= link_to 'Login via Twitter', user_omniauth_authorize_path(:twitter),
      :class => 'popup', "data-width" => 600, "data-height" => 500  %>
    </li>
    <li>
      <%= link_to('Login', new_user_session_path)  %>
    </li>
    <li>
      <%= link_to('Register', new_user_registration_path)  %>
    </li>
  <% end %>
  <li>
    <%= form_tag "/home/search", :method => :get,:class => "form-search", :id => 'searchdiv', :remote => true do %>
      <p class = "input-append">
      <% end %>
      <%= text_field_tag :search, params[:search], :placeholder => "Search....." ,:class => "span2 search-query"%>
      <button class='btn btn-info'>
        <i class="icon-search icon-white"></i>
      </button>
    </p>
  <% end %>
</li>
