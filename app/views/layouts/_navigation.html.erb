<%= link_to "Home", root_path, :class => 'brand'%>
<ul class='nav'>
  <% if user_signed_in? %>
    <li class="dropdown">
      <a id = "count" class="dropdown-toggle" data-toggle="dropdown" href="#">
        <%if @count == 0%>
          <span class="badge badge-inverse"><%= @count %></span>
        <%else%>
          <span class="badge badge-important"><%= @count %></span>
        <%end%>
        <b class="caret"></b>
      </a>
      <ul id="update-dropdown" class="dropdown-menu">
        <%= render 'notifications/view_notifications' %>
      </ul>
    </li>
  <% end %>
</ul>

<ul id="nav_login" class="nav pull-right">
  <% if not user_signed_in? %>
    <li><%= link_to('Sign in', new_user_session_path) %></li>
    <li>
    <%= link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook),
                 :class => 'popup social-media-login facebook-nav-login',
                 "data-width" => 600, "data-height" => 500 %>
    </li>
    <li>
    <%= link_to 'Sign in with Twitter', user_omniauth_authorize_path(:twitter),
                :class => 'popup social-media-login twitter-nav-login',
                'data-width' => 600, 'data-height' => 500  %>
    </li>
  <% elsif current_user.is_a? Committee || !current_user.ideas.empty? %>
    <li><%= link_to('Dashboard', controller: 'dashboard' , action: 'index') %></li>
  <% end %>
</ul>

<ul class="nav">
  <li>
    <%= link_to('stream', controller: 'home' , action: 'index') %>
  </li>
  <% if user_signed_in? %>
    <% if current_user.is_a? Committee%>
      <li>
        <%= link_to('Dashboard', controller: 'dashboard' , action: 'index') %>
      </li>
    <% else %>
      <% if current_user.ideas != nil %>
        <li>
          <%= link_to('Dashboard', controller: 'dashboard' , action: 'index') %>
        </li>
      <% end %>
    <% end %>
  <% end %>
  <li>
    <% if params[:controller] == 'stream' %>
      <form class="form-search" id="searchdiv">
        <div class="input-append">
          <input type="text" class="span2 search-query" id="search" placeholder="Search.....">
            <div class="btn-group">
              <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" id="search_button">
                <i class="icon-search icon-white"></i>
                 <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a href="#" id="user-search-button">Find Members</a>
                </li>
                <li>
                  <a href="#" id="idea-search-button">Search for an idea</a>
                </li>
              </ul>
            </div>
          </div>
      </form>
    <% else %>
      <%= form_tag "/stream/index", :method => :get,:class => "form-search", :id => 'searchdivelse' do %>
        <div class="input-append">
          <%= text_field_tag :search, params[:search],:placeholder => "Search....." ,:class => "span2 search-query"%>
            <div class="btn-group">
              <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" id="search_button">
                <i class="icon-search icon-white"></i>
                 <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a href="#" id="user-search-button-redirection">Find Members</a>
                </li>
                <li>
                  <a href="#" id="idea-search-button-redirection">Search for an idea</a>
                </li>
              </ul>
            </div>
          </div>
        <% end %>
    <% end %>
  </li>
</ul>

<% if user_signed_in? %>
  <ul class="nav pull-right">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user"></i><%= current_user.username %>
        <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li>
          <a href="#myModal" data-toggle="modal"><i class="icon-wrench"></i> Account Settings</a>
        </li>
        <li>
          <%= link_to('My Profile', current_user.becomes(User)) %>
        </li>
        <li>
          <%= link_to('Sign out', destroy_user_session_path, :method=>:delete) %>
        </li>
        <li>
          <%= link_to('Deactivate', controller: 'users' , action: 'confirm_deactivate') %>
        </li>
      </ul>
    </li>
  </ul>
<% end %>

<%if user_signed_in? and current_user.is_a? Admin%>
  <ul class="nav pull-right">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><a href="/admins/invite">Invite</a></li>
      </ul>
    </li>
  </ul>
<%end%>
