 <script>
  $(".btn-link").click(function tag_caller(e){
    e.preventDefault();
    var tag = $(this);
    $("#search").val("");
    stream_manipulator(1,tag.val(),"",true, false);
  });

    $(".close").click(function tag_remover(e){
    e.preventDefault();
    var curr = $(this);
    $("#search").val("");
    stream_manipulator(1,curr.val(),"",false, false);
  });
  </script>

<% if @page.nil? %>
<% if !@searching_with %>
  <% @ideas.each do |idea| %>
    <%= render partial: 'ideas/stream_component', locals: { idea: idea } %>
  <%end%>
<% else %>
<table>
  <% @users.each do |user| %>
